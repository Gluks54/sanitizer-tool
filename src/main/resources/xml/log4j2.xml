<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
 <Appenders>
  <LogAppender name="JavaFXLogger">
   <PatternLayout
    pattern="%d{yyyy-MM-dd HH:mm:ss} %c{1}:%L - %m%n" />
  </LogAppender>
 </Appenders>
 <Loggers>
  <Root level="debug">
   <AppenderRef ref="JavaFXLogger" />
  </Root>
 </Loggers>
</Configuration>  
